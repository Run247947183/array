class Solution {
    public int[] plusOne(int[] digits) {
        int[] array = new int[digits.length + 1];
        if (digits[digits.length - 1] == 9) {
            for (int i = digits.length - 1; i >= 0; i--) {
                digits[i] = 0;
                if (i - 1 >= 0 && digits[i - 1] == 9) {
                    continue;
                } else if (i - 1 < 0) {
                    array[0] = 1;
                    array[1] = 0;
                    for (int j = 1; j < digits.length; j++) {
                        array[j + 1] = digits[j];
                    }
                    digits = array;
                } else {
                    digits[i - 1] += 1;
                    break; 
                }
            }
        } else {
            digits[digits.length - 1] += 1;            
        }
        return digits;
    }
}
